node {
    env.NODEJS_HOME = "${tool 'Node 21.4.0'}"
    env.PATH="${env.NODEJS_HOME}/bin:${env.PATH}"
    stage('Checkout') {
        checkout([$class: 'GitSCM', branches: [[name: 'react-app']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[url: 'https://github.com/jolebo/a428-cicd-labs.git']]])
    }
    stage('Build') { 
        sh 'npm install'
        
    }
    stage('Test') {
        sh './jenkins/scripts/test.sh'
    }
}